{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react-native",
        "rootDir": "src",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "watch": true,
        "strict": true,
        "noEmitOnError": true
    },
    "filesGlob": ["src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["index.android.js", "index.ios.js", "build", "node_modules"],
    "compileOnSave": true
}
